@model List<string>

@{
    ViewData["Title"] = "Confirmación de Compra";
}

<div class="alert alert-success mt-4">
    <h4 class="alert-heading">¡Productos seleccionados con éxito!</h4>
    @if (Model.Count > 0)
    {
        <ul>
            @foreach (var item in Model)
            {
                <li>@item</li>
            }
        </ul>
    }
    else
    {
        <p>No seleccionaste ningún producto.</p>
    }
</div>

<a asp-controller="Producto" asp-action="Seleccionar" class="btn btn-secondary">Volver a seleccionar</a>
<a asp-controller="Home" asp-action="Index" class="btn btn-primary">Volver al inicio</a>
